
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title

block header

block content
    include author
    .container-fluid.main-content
    .page-title
        h1 #{ page.title } 
        .row
            .col-lg-12
                .widget-container.fluid-height.clearfix
                    .col-md-12
                        .heading
                            i.icon-book #{ page.subtitle }
                        .widget-content.padded
                            
                            p.author
                                | #{ "Written by " }
                                i.icon-book
                                    author(page.metadata.author)

                            section.content!= typogr(page.html).typogrify()